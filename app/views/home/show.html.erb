                  <i class="fas fa-sync-alt"></i>
                <% end %>
                </div>
              </div>
            </div>

          </div>
        </div>
        </div>

        <div class="card border-info mb-3" style="">
        <div class="card-header bg-transparent border-info text-info">夜食</div>
        <div class="card-body">
