<% @kondates.each do |kondate|  %>
<div class="card text-center mb-3">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <a class="nav-link active"><%= kondate.day %>日目</a>
      </li>
      <li class="nav-item">
        <a class="nav-link">使う具材</a>
      </li>
      <li class="nav-item">
        <a class="nav-link">その他</a>
      </li>
    </ul>
  </div>
  <script>
    $('.nav-link').click(function() {
      $('.active').removeClass('active');
      $(this).addClass('active');
    })
  </script>
  <div class="card-body">
    <div class="card-deck">
        <div class="card border-success mb-3" style="">
        <div class="card-header bg-transparent border-success text-success">朝食</div>
        <div class="card-body">

            <% b_v_dish = Dish.find(kondate.b_v_id) %>
              <div class="card" style="">
              <%= link_to b_v_dish.url, target: "_blank" do %>
              <img class="card-img-top" src="<%= b_v_dish.image_url %>">
              <% end %>
              <div class="card-body">
                <h5 class="card-title">
                  <%= b_v_dish.title %>
                </h5>
                <p class="card-text">
                  <%= b_v_dish.ingredients.truncate(20) %>
                </p>
                <div class="text-center">

                <%= link_to "/home/#{b_v_dish.id}", class: "btn btn-primary reload-btn" do %>
                  <i class="fas fa-sync-alt"></i>
                <% end %>
                </div>
              </div>
            </div>

        </div>
        </div>

        <div class="card border-danger mb-3" style="">
        <div class="card-header bg-transparent border-danger text-danger">昼食</div>
        <div class="card-body">
