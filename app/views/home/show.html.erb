                <%= link_to "/home/#{d_fm_dish.id}", class: "btn btn-primary reload-btn" do %>
                  <i class="fas fa-sync-alt"></i>
                <% end %>
                </div>
              </div>
            </div>

          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= link_to "クックパッドマートで一括注文", "https://cookpad-mart.com/", class: "btn btn-primary mb-3 mt-5" %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">食材名</th>
      <th scope="col">回数</th>
      <th scope="col">Cookpad martで注文</th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.sort { |a, b| b[1] <=> a[1] }.each_with_index do |(key,val),i| %>
      <% if val != 1%>

    <tr>
      <th scope="row"><%= i+1 %></th>
      <td><%= key %></td>
      <td><%= val %></td>
      <td><%= link_to "クックパッドマートで注文", "https://cookpad-mart.com/", class: "btn btn-primary" %></td>
    </tr>
    
      <% end %>
    <% end %>
  </tbody>
</table>
